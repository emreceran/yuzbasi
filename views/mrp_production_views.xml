<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_mrp_production_form_custom" model="ir.ui.view">
        <field name="name">mrp.production.form.custom</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_extra_info']" position="before">
                <group string="Ürün Ölçüleri">
                    <field name="urun_adi"/>
                    <field name="urun_aciklama"/>
                    <field name="en"/>
                    <field name="boy"/>
                    <field name="uzunluk"/>
                    <field name="agirlik"/>
                    <field name="kalip_id"/>
                    <field name="project_id"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
